<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginStart="@dimen/mt5"
    android:layout_marginEnd="@dimen/mt5"
    android:elevation="3dp"
    android:background="@drawable/item_bg"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/item_user"
            android:layout_height="@dimen/item_user"
            android:src="@drawable/android1" />

        <TextView
            android:id="@+id/typeItemFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/mt10"
            tools:text="一级目录"/>

    </LinearLayout>

    <TextView
        android:id="@+id/typeItemSecond"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l1"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/typeItemArrow"
        android:textColor="@android:color/secondary_text_light"
        tools:text="二级目录"/>

    <ImageView
        android:id="@+id/typeItemArrow"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/go" />
</RelativeLayout>