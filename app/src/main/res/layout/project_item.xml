<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/item_bg"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginStart="@dimen/mt5"
    android:layout_marginEnd="@dimen/mt5"
    android:elevation="3dp">

   <ImageView
       android:id="@+id/pImage"
       android:layout_width="150dp"
       android:layout_height="180dp"
       android:layout_margin="@dimen/mt10"
       android:scaleType="centerCrop"/>

   <TextView
       android:id="@+id/pTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/pImage"
       android:text="标题"
       android:textSize="15sp"
       android:textColor="@color/black"
       android:layout_marginTop="10dp"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="10dp"
       android:maxLines="2"
       android:ellipsize="end" />

   <TextView
       android:id="@+id/pContent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/pImage"
       android:layout_below="@+id/pTitle"
       android:text="内容"
       android:textSize="14sp"
       android:layout_marginTop="5dp"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="10dp"
       android:maxLines="3"
       android:ellipsize="end" />

   <TextView
       android:id="@+id/pKindT"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/pImage"
       android:text="分类:"
       android:textSize="14sp"
       android:layout_marginStart="5dp"
       android:layout_above="@+id/pAuthorT"/>

   <TextView
       android:id="@+id/pKind"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/pKindT"
       android:layout_above="@+id/pAuthorT"
       android:text="分类"
       android:textSize="14sp"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="10dp"
       android:maxLines="1"
       android:ellipsize="end"
       />

   <TextView
       android:id="@+id/pAuthorT"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="作者:"
       android:textSize="14sp"
       android:layout_marginTop="10dp"
       android:layout_marginStart="5dp"
       android:layout_toEndOf="@+id/pImage"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/mt10"/>

   <TextView
       android:id="@+id/pAuthor"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/pAuthorT"
       android:text="作者"
       android:textSize="14sp"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="10dp"
       android:layout_marginStart="5dp"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/mt10"
       android:maxLines="1"
       android:ellipsize="end"/>

</RelativeLayout>